<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".UserProfile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.7"
        android:layout_gravity="center_horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:id="@+id/placeView"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:adjustViewBounds="true">
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/inputName"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="800px"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/inputDescription"
            android:layout_width="317dp"
            android:layout_height="77dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="900px"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="1800px">


            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="350px"
                android:layout_marginRight="20dp"
                android:text="Go back !!" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/audio_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1200px"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="0dp">

            <Button
                android:id="@+id/playButton"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginTop="1300px"
                android:layout_marginLeft="350px"
                android:background="@drawable/play" />
            <Button
                android:id="@+id/pauseButton"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginTop="1300px"
                android:layout_marginLeft="20px"
                android:background="@drawable/pause" />
            <Button
                android:id="@+id/restartButton"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginTop="1300px"
                android:layout_marginLeft="20px"
                android:background="@drawable/refresh" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>